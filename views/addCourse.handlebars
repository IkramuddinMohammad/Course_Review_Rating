<main>
    <div class="container">
        <h1>Add course</h1>
        <form method="POST" id="addcourse_form" action="/courses/add" onsubmit="return validate(this);">
            <label for="name">Course Name: </label>
            <input type="text" name="name" id="name" minlength="4"  placeholder="Course Name">
            <span id="nameError" class="error"></span>
            <label for="courseId">Course Id: </label>
            <input type="text" name="courseId" id="courseId" minlength="4"  placeholder="Course Id">
            <span id="courseIdError" class="error"></span>
            <label for="credits">Course Credits: </label>
            <input type="number" name="credits" id="credits" placeholder="Course Credits between 1 and 3">
            <span id="creditsError" class="error"></span>
            <label for="professorName">Professor Name: </label>
            <input type="text" name="professorName" id="professorName" minlength="4" placeholder="Professor Name">
            <span id="professorNameError" class="error"></span>
            <label for="professorEmail">Professor email: </label>
            <input type="text" name="professorEmail" id="professorEmail" placeholder="Professor email">
            <span id="professorEmailError" class="error"></span>
            <label for="taName">TA Name: </label>
            <input type="text" name="taName" id="taName" minlength="4" placeholder="TA Name">
            <span id="taNameError" class="error"></span>
            <label for="taEmail">TA Email: </label>
            <input type="text" name="taEmail" id="taEmail" placeholder="TA Email">
            <span id="taEmailError" class="error"></span>
            <input type="submit" value="Add Course" class="btn">
        </form>
    </div>
    <script src="/public/javascript/addCourse.js"></script>
</main>