<main>
    <div class="container-widemode" id="right">
        <h2>Edit Review</h2>
        <form action="/reviews/{{reviewId}}/edit" method="post">
            <label for="semesterVal">Semester</label>
            <input type="text" id="semesterVal" name="semesterVal" value="{{semesterVal}}" readonly>
            <label for="rating">Rating</label>
            <input type="number" id="rating" name="rating" value="{{rating}}" required>
            <label for="reviewText">Review Text</label>
            <input type="text" id="reviewText" name="reviewText" value="{{reviewText}}" required>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</main>