<main>
    
    <div class="container" id="login-details">
        <h1>Login to review the Course!</h1>
        <form id="login_form" name="loginForm" action="/students/login" method="POST">
            <label for="email">Email: </label>
            <input type="text" name="email" id="email" placeholder="Enter your Email">
            <span id="emailError" class="error"></span>
            <label for="password">Password:</label>
            <input type="password" name="password" id="password" placeholder="Enter your Password">
            <span id="passwordError" class="error"></span>
            <button type="submit" class="btn">Login</button>
            <p>Don't have account? Please <a href="/students/register">Register</a></p>
            
            <p id="error_msg" class="error-msg"></p>
           
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
        </script>
    <script src="/public/javascript/login.js"></script>
</main>