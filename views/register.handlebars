<main>
    <div class="loginPage" id="register-details">
        <h2>please register with your college email</h2>
        <form class="registerForm" id="register-form" name="RegisterForm" action="/students/register" method="POST">
            <div class="group">
                <input type="text" class="registerInput" name="firstname" id="firstname"
                    placeholder="Enter your First Name" required />
                <span id="firstnameError" class="error"></span>
            </div>
            <div class="group">
                <input type="text" class="registerInput" name="lastname" id="lastname"
                    placeholder="Enter your Last Name" required />
                <span id="lastnameError" class="error"></span>
            </div>
            <div class="group">
                <input type="text" class="registerInput" name="email" id="email" placeholder="Enter your Email"
                    required />
                <span id="emailError" class="error"></span>
            </div>
            <div class="group">
                <input type="password" class="registerInput" id="password" name="password" minlength="8"
                    placeholder="Enter a Password(8 characters minimum)" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                    title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
                    required>
                <span id="passwordError" class="error"></span>
            </div>
            <div id="message">
                <h3>Password must contain the following:</h3>
                <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                <p id="number" class="invalid">A <b>number</b></p>
                <p id="length" class="invalid">Minimum <b>8 characters</b></p>
            </div>
            <br />
            <div class="group">
                <button type="submit" class="btn">Register</button>
                <span id="username-errmsg" class="error"></span>
            </div>
            {{#if error}}
            <p class="error">{{error}}</p>
            {{/if}}
        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous">
        </script>
    <script src="/public/javascript/register.js"></script>
</main>