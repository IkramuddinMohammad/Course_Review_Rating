<main>
    <div class="card-wide" id ="sticky">
        <h1>{{firstName}} {{lastName}} </h1>
       <h1>{{state}}</h1>
    </div>
    
    <div class="card-wide" id="right">
        <h2>Reviews</h2>
        {{#each reviews}}
        <div>
            <div class="card-full">
                <div class="reviewHeading">
                    <div class="reviewerName">
                        <p class = "course_name"><a href="/courses/{{this.course._id}}">{{this.course.name}}</a></p>
                    </div>
                    <div class="reviewerRating">
                        <p class = "course_rating"><a href="/reviews/{{this.review._id}}">Rating: {{this.review.rating}}</a></p>
                    </div>
                </div>
                
                <div class = "reviewText">
                    <p>{{this.review.reviewText}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>